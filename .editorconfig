# EditorConfig - Robert Darin Fintech
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{dart,java,kt}]
indent_style = space
indent_size = 2

[*.{js,html,css}]
indent_style = space
indent_size = 2

[*.{json,yaml,yml}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.sh]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

[*.sql]
indent_style = space
indent_size = 2
